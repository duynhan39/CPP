#ifndef POINT_H_
#define POINT_H_

class Point
{
   public:  // Operations

      // Constructors
      Point ();

      // Accessors
      double x_coord () const;
      double y_coord () const;

   private:  // Attributes

      double x, y;  // Coordinates for point (x,y)

};  // end Point class

